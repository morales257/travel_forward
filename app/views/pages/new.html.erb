<% provide(:title, 'Add New Country')%>
<h1>Add A New Country</h1>
<div class= "row">
  <div class= "col-md-3 col-md-offset-3">
    <%= form_for(@page) do |f| %>
    <div><% hidden_field_tag :author_id, @user.id %></div>

    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>

    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>

    <span class= "background-image">
      <%= f.file_field :background, accept: ['image/jpeg', 'image/png', "image/jpg"] %>
    </span>

    <%= f.submit "Add Country", class: "btn btn-primary" %>
    <% end %>
  </div>

</div>
